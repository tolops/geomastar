FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# FIX: Install ALL dependencies (including TypeScript) so we can build
RUN npm ci

# Copy source code
COPY . .

# Build TypeScript (This will work now)
RUN npm run build

# Expose port
EXPOSE 3000

# Start server
CMD ["node", "dist/index.js"]
